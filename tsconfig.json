{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "locale": "ko",
    "pretty": true,
    "listFiles": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true,  // for speed up compilation

    "alwaysStrict": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "downlevelIteration": true,
    "noUnusedLocals": true, // not too strict?
    "noUnusedParameters": true,
    "resolveJsonModule": true,

    "baseUrl": "src",     // root for non-relative imports
    "outDir": "build",
    "rootDir": "src",     // all sources are below here

    "module": "commonjs",
    "moduleResolution": "node",

    "types": ["node", "three"]
  },

  "include": ["src/**/*"],

  "exclude": ["node_modules", "lab"]
}
