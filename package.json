{
  "name": "fold-viewer-threejs",
  "version": "0.1.0",
  "description": "FOLD File Viewer (Three.js)",
  "browser": {
    "path": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innanyun/fold-viewer-threejs.git"
  },
  "keywords": [
    "origami",
    "crease",
    "pattern",
    "geometry",
    "2D",
    "3D"
  ],
  "license": "MIT",
  "dependencies": {
    "fs": "^0.0.1-security",
    "gsap": "^3.7.1",
    "http-server": "^13.0.1",
    "mathjs": "^9.4.4",
    "three": "^0.129.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/dat.gui": "^0.7.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.0.0",
    "@types/three": "^0.129.2",
    "browser-sync": "^2.27.3",
    "chai": "^4.3.4",
    "dat.gui": "^0.7.7",
    "esbuild": "^0.12.9",
    "eslint": "^7.30.0",
    "esm": "^3.2.25",
    "jshint": "^2.13.0",
    "mocha": "^9.0.2",
    "rxjs": "^7.1.0",
    "rxjs-debug": "^1.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "start": "npx esbuild src/app.ts --bundle --format=esm --minify --outdir=build && npx http-server",
    "dev": "npx esbuild src/app.ts --watch --bundle --format=esm --sourcemap --outdir=build",
    "browser-sync": "npx browser-sync start --server --files 'build' '*.html'"
  }
}
