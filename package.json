{
  "name": "fold-viewer-threejs",
  "version": "0.1.0",
  "description": "FOLD File Viewer (Three.js)",
  "browser": {
    "path": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innanyun/fold-viewer-threejs.git"
  },
  "keywords": [
    "origami",
    "crease",
    "pattern",
    "geometry",
    "2D",
    "3D"
  ],
  "license": "MIT",
  "dependencies": {
    "fs": "^0.0.1-security",
    "gsap": "^3.7.1",
    "http-server": "^13.0.1",
    "mathjs": "^9.4.4",
    "three": "^0.129.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.19",
    "@types/dat.gui": "^0.7.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.0.0",
    "@types/three": "^0.129.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "browser-sync": "^2.27.3",
    "chai": "^4.3.4",
    "dat.gui": "^0.7.7",
    "esbuild": "^0.12.9",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "esm": "^3.2.25",
    "jshint": "^2.13.0",
    "mocha": "^9.0.2",
    "npm-run-all": "^4.1.5",
    "rxjs": "^7.1.0",
    "rxjs-debug": "^1.3.0",
    "strip-json-comments": "^4.0.0",
    "strip-json-comments-cli": "^2.0.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "_type-check-only": "tsc --project tsconfig.json --watch --noEmit",
    "_esbuild-base": "esbuild src/app.ts --bundle --format=esm --outdir=build",
    "_esbuild-watch": "npm run _esbuild-base -- --watch --sourcemap",
    "build": "npm run _esbuild-base -- --minify",
    "browser-sync": "browser-sync start --server --files 'build' '*.html'",
    "dev": "npm-run-all --parallel _type-check-only _test-watch _esbuild-watch browser-sync",
    "lint": "eslint src",
    "_strip-json-comments": "strip-json-comments --no-whitespace tsconfig.json > .tsconfig.json",
    "_test-base": "ts-mocha --project .tsconfig.json --paths src/**/*test.ts",
    "_test-watch": "npm run _test-base -- --watch --watch-extensions ts",
    "test": "npm-run-all --serial _strip-json-comments _test-base",
    "start": "npm run build && http-server"
  }
}
